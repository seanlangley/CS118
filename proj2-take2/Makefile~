CC=g++
CFLAGS = -g -Wall -Wextra -pthread
all: receiver sender

receiver: receiver.o rdt.o 
	$(CC) -o receiver $(CFLAGS) receiver.o rdt.o
sender: sender.o rdt.o
	$(CC) -o sender sender.o rdt.o

receiver.o: receiver.cpp rdt.cpp rdt.h
	$(CC) -c receiver.cpp

sender.o: sender.cpp rdt.cpp rdt.h
	$(CC) -c sender.cpp

rdt.o: rdt.cpp rdt.h
	$(CC) -c rdt.cpp

clean:
	rm *.o receiver sender